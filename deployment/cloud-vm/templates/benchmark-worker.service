[Unit]
Description=Benchmark worker
After=network.target

[Service]
ExecStart=/opt/benchmark/bin/benchmark-worker
Environment='JVM_OPTS=-Dzone.id={{ az }} -javaagent:jmx_prometheus_javaagent.jar={{prometheus_jmx_javaagent_port}}:kafka_client.yaml'
WorkingDirectory=/opt/benchmark
RestartSec=1s
Restart=on-failure
Type=simple
LimitNOFILE=300000

[Install]
WantedBy=multi-user.target
